// Oct 29,2023
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int n;
    cin>>n;
    
    int row =1;
    
    while(row<=n)
    {
       int col =1;
       //print numbers for 1st triangle
       while(col<=(n-row+1))
       {
         cout<<col;
         col = col+1;
       }
       
        //print asterisks
       int j = 1;
       char ch ='*';
       while(j<=(2*row)-2)
       {
           cout<<ch;
           j = j + 1;
       }
       
       //print third triangle
       int start = n-row+1;
       while(start>=1)
       {
           cout<<start;
           start = start-1;
       }
     cout<<endl;
     row = row + 1;
     }
}
